<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activities.activities.drawerActivities.GetRecommendationsActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">


        <android.support.v7.widget.Toolbar
            android:id="@+id/tb_menu"
            android:layout_width="match_parent"
            android:layout_height="40dp" />

        <TextView
            android:id="@+id/tv_message"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <CheckBox
            android:id="@+id/cb_fantasy"
            android:layout_below="@+id/tv_message"
            android:text="Fantasy"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:onClick="selectItem"
            />

        <CheckBox
            android:id="@+id/cb_classics"
            android:layout_below="@+id/cb_fantasy"
            android:text="Classics"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:onClick="selectItem"
            />

        <CheckBox
            android:id="@+id/cb_horror"
            android:layout_below="@+id/cb_classics"
            android:text="Horror"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:onClick="selectItem"
            />

        <CheckBox
            android:id="@+id/cb_biographies"
            android:layout_below="@+id/cb_horror"
            android:text="Biographies"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:onClick="selectItem"
            />

        <Button
            android:id="@+id/bt_get_recommendations"
            android:layout_below="@+id/cb_biographies"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Get Recommendations"
            />

    </RelativeLayout>

</android.support.constraint.ConstraintLayout>